
<div style="max-width:500px; margin:auto;">

   <h1 class="text-xl font-normal text-gray-900 leading-tight ">
    <%=  @user.name%>
  </h1> 
  <%= form_for(@user, url: user_path(@user), html: { 'data-turbo': 'false', class: 'form  ' }) do |f| %>

      <div > 
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, readonly: !policy(@user).update? %>
      </div>
      <div >
        <%= f.label :email %>
        <%= f.text_field :email, autofocus: true, readonly: !policy(@user).update? %> 
      </div> 

      <div>

        <%= if policy(@user).update? then f.submit "Save", class: "button-primary" end %> 

    </div>

 
  <% end %> 


   <h1 class="text-xl font-normal text-gray-900 leading-tight mt-10 mb-2 ">
      Delete user 
    </h1>
    <p >
      Deleting your user account will also delete every team where you are the only member
    </p>

    <%= button_to "Delete",
                    user_path(@user),
                      class:"button-danger mt-4",
                      title:"This will delete your account and the teams that are only yours. ",
                       method: :delete,
                       form: {
                         'data-controller':'confirm',
                         'data-turbo': 'false',
                         'data-confirm-message-value':"Are you sure that you want to delete user #{@user.name}?"
                       }
        %> 

 
  </div>  