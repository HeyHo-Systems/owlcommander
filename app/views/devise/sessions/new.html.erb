<%= render 'shared/session_box', title: 'Log in to your account' do %>

  <%= render 'shared/google_tag_manager' %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form', 'data-turbo': 'false' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div style="margin-top: 0">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true,  autocomplete:"username", required: true %>
    </div>

    <div>
      <%= f.label :password do %>
        <div class="flex justify-between items-center">
          <span>Password</span>
          <%- if ENV['SENDGRID_API_KEY'].present? %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-medium" %>
          <%- end %>
          </div>
      <% end %>
      <%= f.password_field :password, autocomplete: 'current-password', required: true %>
    </div>

    <div class="flex items-center justify-between">

      <%= link_to "Sign up instead", new_registration_path(resource_name) %>


      <%= f.submit 'Log in' %>
    </div>
  <% end %>
<%- end %>
