<%= render 'shared/session_box', title: 'Sign up' do %>

  <%= render 'shared/google_tag_manager' %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form', 'data-turbo': 'false' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name,required: true, autofocus: true, autocomplete: 'name' %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete:"username" %>
    </div>

    <div class="field">
      <%= f.label :password do %>
        Password (<%= @minimum_password_length %> characters minimum)
        <%end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="flex items-center justify-between">

      <%= link_to "Log in instead", new_session_path(resource_name) %>
      <%= f.submit "Sign up" %>
    </div>
  <% end %>


<%- end %>